<?xml version="1.0" encoding="UTF-8"?>
<project name="jer.clean" basedir="../../../">

    <import file="../../build.xml"/>

    <!--Files generated by docs target-->
    <patternset id="docs.files.to.clean">
        <include name="allclasses-frame.html"/>
        <include name="index.html"/>
        <include name="overview-frame.html"/>
        <include name="stylesheet.css"/>
    </patternset>

    <!--Files generated by JUnitReporter-->
    <patternset id="test.files.to.clean">
        <include name="TEST-*"/>
    </patternset>

    <!--Properties files-->
    <patternset id="property.files.to.clean">
        <include name="*.properties"/>
    </patternset>

    <!--Clean build-->
    <target name="buildClean"
            description="Removes the temporary junk">
        <delete dir="${build.folder}"/>
    </target>

    <!--Clean Docs-->
    <target name="docs"
            description="Cleans JavaDocs">
        <delete dir="${docs}"/>
        <delete>
            <fileset dir=".">
                <patternset refid="docs.files.to.clean"/>
            </fileset>
        </delete>
        <delete dir="files"/>
    </target>

    <!--Clean compiled source-->
    <target name="compile" description="Cleans compiled classes">
        <delete dir="${classes.folder}"/>
    </target>

    <!--Clean the dist folder-->
    <target name="dist" description="Cleans up the dist folder">
        <delete dir="${dist.folder}"/>
    </target>

    <!--Clean everything-->
    <target name="all" description="Removes the temporary junk">
        <delete dir="${build.folder}"/>
        <delete dir="${docs}"/>
        <delete dir="files"/>
        <delete>
            <fileset dir=".">
                <patternset refid="test.files.to.clean"/>
                <patternset refid="docs.files.to.clean"/>
                <patternset refid="property.files.to.clean"/>
            </fileset>
        </delete>
    </target>

</project>